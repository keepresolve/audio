{
    "env": {
        "development": {
            "presets": [
                [
                    "env",
                    {
                        "targets": {
                            "browsers": [
                                "last 3 Chrome versions",
                                "last 2 Firefox versions"
                            ]
                        },
                        "modules": "commonjs",
                        "debug": true
                    }
                ]
            ]
        },
        "production": {
            "presets": [
                [
                    "env",
                    {
                        "targets": {
                            "browsers": [
                                "last 3 Chrome versions",
                                "last 2 Firefox versions",
                                "ie 10-11",
                                "last 3 edge versions"
                            ]
                        },
                        "debug": true
                    }
                ]
            ],
            "plugins": [
                [
                    "transform-runtime",
                    {
                        "polyfill": false,
                        "regenerator": true
                    }
                ]
            ]
        }
    }
}
